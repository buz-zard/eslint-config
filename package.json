{
  "name": "@k.sh/eslint-config",
  "version": "1.16.1",
  "description": "ESLint config based on Airbnb",
  "keywords": [
    "airbnb",
    "eslint",
    "prettier",
    "react"
  ],
  "repository": "git@github.com:karolis-sh/eslint-config.git",
  "license": "MIT",
  "author": "Karolis Å arapnickis <pastas.k@gmail.com>",
  "main": "index.js",
  "scripts": {
    "bump": "npm info 'eslint-config-airbnb@latest' peerDependencies && echo 'Do not update these ðŸ”¼\n' && yarn upgrade-interactive --latest",
    "bump-airbnb": "npx install-peerdeps eslint-config-airbnb && yarn",
    "check-deps": "sh ./scripts/validate-dependencies.sh",
    "format": "prettier --write '**/*.*' && sort-package-json",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint *.md -i node_modules -i CHANGELOG.md",
    "qa": "run-p test lint check-deps",
    "prerelease": "git checkout master && git pull && yarn i",
    "release": "yarn qa && standard-version && git push --follow-tags --no-verify && yarn publish",
    "test": "eslint --print-config index.js | eslint-config-prettier-check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{md,json}": [
      "pretty-quick --staged"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "prettier": "^2.0.4"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "markdownlint-cli": "^0.22.0",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^2.0.1",
    "sort-package-json": "^1.41.0",
    "standard-version": "^8.0.1",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=8.3"
  }
}
