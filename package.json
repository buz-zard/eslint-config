{
  "name": "@k.sh/eslint-config",
  "version": "0.0.0-development",
  "description": "ESLint config based on Airbnb",
  "keywords": [
    "airbnb",
    "eslint",
    "prettier",
    "react"
  ],
  "repository": "git@github.com:karolis-sh/eslint-config.git",
  "license": "MIT",
  "author": "Karolis Å arapnickis <pastas.k@gmail.com>",
  "main": "index.js",
  "scripts": {
    "check-deps": "sh ./scripts/validate-dependencies.sh",
    "format": "prettier --write '**/*.*' && sort-package-json",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint *.md -i node_modules",
    "qa": "run-p test lint",
    "semantic-release": "semantic-release",
    "test": "eslint --print-config . | eslint-config-prettier-check",
    "travis-deploy-once": "travis-deploy-once",
    "upgrade-interactive": "npm-check -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "pretty-quick --staged"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "prettier": "^1.18.2"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "markdownlint-cli": "^0.18.0",
    "npm-check": "^5.9.0",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^1.11.1",
    "semantic-release": "^15.13.24",
    "sort-package-json": "^1.22.1"
  },
  "engines": {
    "node": ">=8.3"
  }
}
