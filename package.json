{
  "name": "@k.sh/eslint-config",
  "version": "1.21.0",
  "description": "A set of JavaScript linter and formatter configs",
  "keywords": [
    "airbnb",
    "eslint",
    "eslintconfig",
    "prettier",
    "react",
    "typescript"
  ],
  "repository": "git@github.com:karolis-sh/eslint-config.git",
  "license": "MIT",
  "author": "Karolis Å arapnickis <pastas.k@gmail.com>",
  "main": "index.js",
  "scripts": {
    "bump": "npm info 'eslint-config-airbnb@latest' peerDependencies && echo 'Do not update these ðŸ”¼\n' && yarn upgrade-interactive --latest",
    "bump-airbnb": "npx install-peerdeps -Y eslint-config-airbnb",
    "check-deps": "sh ./scripts/validate-dependencies.sh",
    "format": "run-p format:*",
    "format:package.json": "sort-package-json package.json",
    "format:prettier": "prettier --write '**/*.*'",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:md": "markdownlint-cli2 '**/*.md' '!node_modules' '!**/node_modules' '!**/CHANGELOG.md'",
    "qa": "run-p test lint check-deps",
    "release": "yarn && yarn qa && standard-version --no-verify && git push --follow-tags --no-verify && yarn publish",
    "test": "run-p test:*",
    "test:js": "eslint-config-prettier index.js",
    "test:ts": "eslint-config-prettier typescript/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "**/package.json": [
      "sort-package-json"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.{md,json,yml}": [
      "pretty-quick --staged"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "eslint": "7.18.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "prettier": "^2.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "markdownlint-cli2": "^0.0.13",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^3.1.0",
    "sort-package-json": "^1.48.1",
    "standard-version": "^9.1.0",
    "typescript": "^4.1.3"
  },
  "volta": {
    "node": "14.17.2",
    "yarn": "1.22.10"
  }
}
